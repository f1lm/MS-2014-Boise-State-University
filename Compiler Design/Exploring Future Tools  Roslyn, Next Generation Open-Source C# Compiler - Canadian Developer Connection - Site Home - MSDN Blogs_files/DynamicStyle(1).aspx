html, body {
 color: #333333;
 font-family: "Segoe UI"
 font-size: 1em;
 text-align: left;
}

.content-fragment-header {
 color: #3b3b3b;
 font-size: 1em;
 font-weight: 600;
 margin-bottom: 10px;
 text-transform: uppercase;
}

.content-fragment-page { background:none repeat scroll 0 0 #e6e6e6; }

.content-fragment.with-header.no-wrapper-with-spacing 
.content-fragment-header {
 background-image: url(http://www.canitpro.ca/break.jpg);
 background-repeat: no-repeat;
 background-position: bottom;
 font-size: 200px;
}

content-fragment.blog-post-list .content-list.standard .content-item h4.post-name, .content-fragment.with-header div, .content-fragment-page.postlist .content-fragment.blog-banner .application-banner .application-name {
 color: #000000;
 font-weight: normal;
 text-transform: none;
}

.content-fragment.blog-post-list .content-list.standard .post-application {
 font-size: 10px;
 font-weight: bold;
 text-transform: uppercase;
 visibility: hidden;
}

a:link, a:visited, a:active {
 color: #991010;
 outline-color: -moz-use-text-color;
 outline-style: none;
 outline-width: medium;
 text-decoration: none;
}

.tag-cloud .tag-list a { font-weight:normal; }

img.profilePhoto { border: 1px solid black; }

p.note { background: #f5f5f5; border: 1px solid #ddd; padding: 5px}
p.alert { background: #ffffa0; border: 1px solid #e5e597; }

