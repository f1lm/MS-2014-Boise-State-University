	position: relative;
    /*overflow: hidden; */       /* this hides "about these ads" when there's no adfill */
    display: inline-block !important;
    max-width: 100%; 
    text-align: left;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

