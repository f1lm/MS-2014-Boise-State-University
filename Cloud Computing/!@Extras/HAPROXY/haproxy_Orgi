global
  maxconn 4096
  pidfile ~/tmp/haproxy-queue.pid
  daemon

defaults
  log global
  log 127.0.0.1 local0
  log 127.0.0.1 local1 notice  
  mode http
  timeout connect 300000
  timeout client 300000
  timeout server 300000
  maxconn 2000
  option redispatch
  retries 3
  option httpclose
  option httplog
  option forwardfor
  option httpchk HEAD / HTTP/1.0

frontend http-farm
  bind *:9000
  default_backend app1latest

backend app1latest
  balance roundrobin
  option httpclose
  option forwardfor
  option nolinger
  stats enable
  stats auth myuser:mypass
  server monitor_service1 132.178.129.230:8080 cookie monitor_service1 check
  server monitor_service2 132.178.128.254:8080 cookie monitor_service2 check

listen haproxyapp_admin:9100 127.0.0.1:9100
  mode http
  cookie haproxyapp_admin insert
  stats uri /
